#!/usr/bin/env php
<?php
foreach ([__DIR__ . '/../../../autoload.php', __DIR__ . '/../../autoload.php', __DIR__ . '/../vendor/autoload.php', __DIR__ . '/vendor/autoload.php'] as $file) {
	if (file_exists($file)) {
	    require_once $file;
		break;
	}
}
unset($file);

use Symfony\Component\Console\Application;

$application = new Application('converter');
$command = new \AnalyticsConverter\Command\ConvertCommand();
$application->add($command);
$application->setDefaultCommand($command->getName(), true);
$application->run();
